<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.weatherlib.MainActivity">
<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="501dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">
    <ImageView
        android:id="@+id/imgWeather2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="16dp"
        android:src="@drawable/icon_na"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textViewCondi"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textViewTemps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="@string/temp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewTemps"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/loc" />

    <TextView
        android:id="@+id/textViewCondi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTemps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/condi" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewLoc"
        android:layout_alignEnd="@+id/textViewCondi"
        android:layout_marginBottom="11dp"
        android:text="@string/date" />


</RelativeLayout>
</android.support.constraint.ConstraintLayout>
